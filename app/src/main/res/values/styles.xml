<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Theme for fullscreen activity -->
    <style name="AuthTheme" parent="android:Theme.Holo.Light.NoActionBar.Fullscreen">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Theme for dialog activity -->
    <style name="DialogTheme" parent="android:Theme.Holo.Dialog">
        <item name="android:background">#E0E0E0</item>
    </style>

</resources>
